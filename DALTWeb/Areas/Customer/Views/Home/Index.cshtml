

<!-- Hero Start -->
<div class="container-fluid py-5 mb-5 hero-header">
    <div class="container py-5">
        <div class="row g-5 align-items-center">
            <div class="col-md-12 col-lg-7">
                <h4 class="mb-3 text-secondary">100% Đặc sản thiên nhiên</h4>
                <h1 class="mb-5 display-3 text-primary">Đặc sản quê hương</h1>
                <div class="position-relative mx-auto">
                    <form asp-action="Index">
                        <input name="tk" class="form-control border-2 border-secondary w-75 py-3 px-4 rounded-pill" type="text" placeholder="Search">
                        <button type="submit" class="btn btn-primary border-2 border-secondary py-3 px-4 position-absolute rounded-pill text-white h-100" style="top: 0; right: 25%;">Tìm ngay</button>
                    </form>                    
                </div>
            </div>
            <div class="col-md-12 col-lg-5">
                <div id="carouselId" class="carousel slide position-relative" data-bs-ride="carousel">
                    <div class="carousel-inner" role="listbox">
                        <div style="height:300px" class="carousel-item active rounded">
                            <img src="https://blogradio.vn/uploads/cms/source/2021/41/que_-_huong_0.jpg" class="img-fluid w-100 h-100 bg-secondary rounded" alt="slide">
                            <a class="btn px-4 py-2 text-white rounded">Đặc sản</a>
                        </div>
                        @foreach(var item in @ViewBag.TheLoai)
                        {
                            <div style="height:300px" class="carousel-item rounded">
                                <img src="@item.ImageUrl" class="img-fluid w-100 h-100 bg-secondary rounded" alt="slide">
                                <a asp-action="Index" asp-route-dm1="@item.Name" class="btn px-4 py-2 text-white rounded">@item.Name</a>
                            </div>
                        }
                        
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselId" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselId" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Hero End -->


<!-- Fruits Shop Start-->
<div class="container-fluid fruite py-5">
        <div class="container py-5">
            <div class="tab-class text-center">
                <div class="row g-4">
                    <div class="col-lg-4 text-start">
                        <h1>@ViewBag.TitleTK</h1>
                    </div>
                    <div class="col-lg-8 text-end">
                        <ul class="nav nav-pills d-inline-flex text-center mb-5">
                            <li class="nav-item">
                                <a asp-action="Index" class="d-flex m-2 py-2 bg-light rounded-pill">
                                    <span class="text-dark" style="width: 130px;">Tất cả</span>
                                </a>
                            </li>
                            @foreach(var item in ViewBag.TheLoai)
                            {
                                <li class="nav-item">
                                    <a asp-action="Index" asp-route-dm2="@item.Name" class="d-flex py-2 m-2 bg-light rounded-pill">
                                        <span class="text-dark" style="width: 130px;">@item.Name</span>
                                    </a>
                                </li>
                            }
                        
                       
                        </ul>
                    </div>
                </div>
                </div>
         </div>



        <div class="tab-content">
            <div id="tab-1" class="tab-pane fade show p-0 active">
                <div class="row g-4">
                    <div class="col-lg-12">
                        <div class="row g-4">

                            @foreach (var item in @ViewBag.sp)
                            {
                                
                                <div class="col-md-6 col-lg-4 col-xl-3">
                                    <div class="rounded position-relative fruite-item">
                                        <div class="fruite-img">
                                            <a asp-action="Details" asp-route-sanphamId="@item.Id">
                                                <img style="height:160px; max-width:100%" src="@item.ImageUrl" class="img-fluid w-100 rounded-top" alt="anhds">
                                            </a>
                                        </div>
                                        <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">@item.TheLoai.Name</div>
                                        <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                                            <a asp-action="Details" asp-route-sanphamId="@item.Id"><h6 style="height:10px">@item.Name</h6></a>
                                            <p style="height:10px"></p>
                                            <div class="d-flex justify-content-between flex-lg-wrap">
                                                <p class="text-dark fs-5 fw-bold mb-0">$ @item.Price</p>
                                                <input type="hidden" name="sanphamId2" value="@item.Id" />
                                            <a asp-action="ThemVaoGio" asp-route-sanphamId="@item.Id" class="btn border border-secondary rounded-pill px-3 text-primary"><i class="fa fa-shopping-bag me-2 text-primary"></i> Thêm vào giỏ</a>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>


</div>
<!-- Fruits Shop End-->





